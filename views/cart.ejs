<%- include('./include/head.ejs') %> <%- include('./include/header.ejs') %>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 text-center">
      <div class="card col-sm-6 mx-auto">
        <div class="card-header">

          <h3>My Cart</h3>
        </div>
        <div class="card-body col-12">

          <% cart.items.forEach(el => { %>
  
          <div class="mt-2 d-flex justify-content-between text-left">
            <h4><%= el.bookId.title %> (x<%= el.quantity %>)</h4>
            <h5></h5>
              <form class="" method="POST" action="/remove-from-cart/<%= el.bookId._id%>">
                <input type="hidden" name="bookId" value="<%= el.bookId._id%>">
                <button type="submit" class="btn btn-danger">X</button>
              </form>
          </div>
          <% }) %>

        </div>
        <% if (cart.items.length >0) { %>
        <form action="/clear-cart" method="POST">
          <button class="btn btn-outline-danger" type="submit">Clear</button>
        </form>
        <% } %>
      </ul>
    </div>
  </div>
</div>
